	"version":"0.2.0",
	"configurations":[
	{
	"name":"Launch",
	"type":"cppdbg",
	"program":"${workspaceFolder}/cub3D",
	"cwd":"${workspaceFolder}",
	"args":["map/map_test.cub"],
	"request":"launch",
	"MIMode":"gdb"
	},
	{
		"name": "Launch with Valgrind",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/cub3D",
		"args": ["${workspaceFolder}/map.cub"],
		"cwd": "${workspaceFolder}",
		"environment": [],
		"externalConsole": false,
		"MIMode": "gdb",
		"setupCommands": [
			{
				"description": "Enable pretty-printing for gdb",
				"text": "-enable-pretty-printing",
				"ignoreFailures": true
			},
			{
				"description": "Start Valgrind with Memcheck and redirect output to file",
				"text": "monitor exec /usr/bin/valgrind --tool=memcheck --leak-check=full --show-leak-kinds=all --log-file=valgrind.log",
				"ignoreFailures": true
			},
			{
				"description": "Read Valgrind output file and print to console",
				"text": "shell cat valgrind.log",
				"ignoreFailures": true
			},
			{
				"description": "Set a breakpoint",
				"text": "break main",
				"ignoreFailures": true
			},
			{
				"description": "Run the program",
				"text": "run",
				"ignoreFailures": true
			}
		],
		"miDebuggerPath": "/usr/bin/gdb"
	}
	]
}